
          <div class="row">
            <div class="col s12">
              <h1><span class="mainTitle on"><%= @team.name %>의 프로젝트</span></h1>
            </div>
          </div>

          <% if @projects.size == 0 %>
          <div class="row">
            <div class="col s12">
              <div class="card-panel teal">
                <span class="white-text">
                  아직 아무도 등록을 안했어요! 1등으로 웹사이트를 올려주세요!
                </span>
              </div>
            </div>
          </div>
          <% else %>
            <div class="row">
              <div class="col s12 cards-container">
                <% @projects.each do |project| %>
                  <a href="/projects/<%= project.id %>">
                   <div class="card z-depth-4">
                     <div class="card-image" style="background-image: url(<%= project.img %>);">
                     </div>
                     <div class="card-content">
                       <span class="card-title activator grey-text text-darken-4"><%= project.title %></span>
                       <p>
                          <a href="#"><%= project.user.name %></a><br />
                          업데이트 날짜: <%= project.updated_at.to_date %>
                          <% if current_user.isMaster == true %>
                            <br />
                            <%= link_to '[삭제]', "/projects/#{project.id}", method: :delete, data: {confirm: '정말 삭제하시겠습니까?'} %>
                          <% end %>
                       </p>
                     </div>
                    </div>
                  </a>
                <% end %>
              </div>
            </div>
          <% end %>
