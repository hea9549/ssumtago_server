
  <p id="notice"><%= notice %></p>


  <div class="row">
      <div class="col s12">
        <div class="card white">
              <div class="card-content black-text">
                <span class="card-title fsize1"><b><%= @lecture.title %></b></span>

                <div class="chip">
                  <%= @lecture.week %>주 강의
                <img src="https://cdn4.iconfinder.com/data/icons/pictograms-1/512/Calendar-512.png" alt="Contact Person">
                </div>

              </div>
              <div class="card-action">

                <div>
                  <iframe width="100%" height="500" src="<%= @lecture.link %>" frameborder="0" allowfullscreen></iframe>
                </div>
                <p>
                  <%= simple_format @lecture.content.gsub(/\n/, '<br/>') %>
                </p>


                <div>
                  <a href="<%= @lecture.link %>" target="_blank">유튜브에서 보기</a>
                </div>

                <% if current_user.isMaster == true %>
                  <div>
                    <%= link_to '업데이트', edit_lecture_path(@lecture), class: 'waves-effect waves-light btn' %>
                  </div>
                  <hr>
                  <div>
                    <%= link_to 'Destroy', @lecture, method: :delete, class: 'waves-effect waves-light btn', data: { confirm: 'Are you sure?' } %>
                  </div>
                  <hr />
                  <% @lecture.checks.each do |checks| %>
                    <div class="chip">
                      <%= checks.user.name %>
                    </div>
                  <% end %>
                <% else %>
                  <hr />
                  <div>
                    <% if current_user.checks.where(lecture_id: @lecture.id).length == 0  %>
                      <%= link_to "봤어요(#{@lecture.checks.length})", "/lectures/check/#{@lecture.id}", class: 'waves-effect waves-light btn grey darken-2' %>
                    <% else %>
                      <%= link_to "봤어요(#{@lecture.checks.length})", "/lectures/check/#{@lecture.id}", class: 'waves-effect waves-light btn' %>
                    <% end %>
                  </div>
                <% end %>
              </div>
          </div>
      </div>
      <%= link_to '목록으로', "/lectures/index/#{@lecture.lecType}" %>
  </div>
