<%= form_for(board) do |f| %>
  <% if board.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(board.errors.count, "error") %> prohibited this board from being saved:</h2>

      <ul>
      <% board.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="actions">
  <div class="field">
    <%= f.label :title, '제목' %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content, '내용' %>
    <%= f.text_area :content, class: 'materialize-textarea' %>
  </div>

  <div class="field">
      <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="field">
    <%#= f.label :boardType, "0 공지사항 1 자유게시판" %>
    <%#= f.number_field :boardType %>
    <%= f.hidden_field :boardType, value: @type %>
  </div>

  <div class="actions">
    <%= f.submit '작성하기', class:'btn waves-effect waves-light bg1' %>
  </div>
</div>
<% end %>
