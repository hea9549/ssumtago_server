<p id="notice"><%= notice %></p>


  <div class="row">
      <div class="col s12">
        <div class="card white">
              <div class="card-content black-text">
                <span class="card-title fsize1"><b><%= @board.title %></b></span>

                <% unless @board.boardType == 3 %>
                  <%= @board.user.name %>
                <% else %>
                  익명사자
                <% end %>
                 / <%= @board.updated_at.strftime("%m월%d일") %>

              </div>
              <div class="card-action">

                <p>
                  <%= simple_format @board.content.gsub(/\n/, '<br/>') %>
                </p>

                <% if @board.user == current_user || current_user.isMaster == true %>
                  <hr />
                  <div>
                    <%= link_to '업데이트', edit_board_path(@board) %>
                  <!-- </div>
                  <hr>
                  <div> -->
                    <%= link_to '삭제', @board, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </div>
                <% end %>
              </div>


              <div class="card-action">
                <div class="row">
                  <%= form_for(@comment) do |f| %>
                      <div class="input-field col s8 m9 l10">
                        <i class="material-icons prefix">account_circle</i>
                        <label for="icon_prefix">댓글을 입력해주세요</label>
                        <%= f.text_field :content, id: 'icon_prefix' %>
                        <%= f.hidden_field :user_id, value: current_user.id %>
                        <%= f.hidden_field :board_id, value: @board.id %>
                      </div>
                      <div class="col s4 m3 l2">
                        <button class="btn waves-effect waves-light center bg1" type="submit">댓글달기
                        </button>
                      </div>
                  <% end %>
                </div>
              </div>

              <div class="card-action">
                      <ul class="collection">
                        <% @board.board_comments.reverse.each do |c| %>
                            <li class="collection-item">
                              <div class="comment-profile">
                                <i class="material-icons">person</i>

                                <% unless @board.boardType == 3 %>
                                  <td><%= c.user.name %> </td>
                                <% else %>
                                  <td>익명사자</td>
                                <% end %>
                                (<%= c.created_at.strftime("%m.%d") %>)<br />
                              </div>
                              <div class="comment-content">
                                 <%= c.content %>
                             </div>
                                 <% if user_signed_in? %>
                                   <% if c.user == current_user %>
                                       <%= link_to '[삭제]', c, method: :delete %>
                                   <% end %>
                                 <% end %>
                            </li>
                        <% end %>
                      </ul>

              </div>







          </div>
      </div>
      <%= link_to '목록으로', "/boards/index/#{@board.boardType}" %>
  </div>
